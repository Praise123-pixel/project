meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Login - MWF
link(rel="stylesheet", href="./css/login.css")
main.login-container
  section.login-card
    h1 MWF Login
    form#loginForm(action="login" method="post")
      input#email(type="email", placeholder="Email Address", name="email" required)
      input#password(type="password", placeholder="Password", name="password" required)
      button(type="submit") Login
script(src="../public/js/login.js")
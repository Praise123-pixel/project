//  FORM 2: SALES MANAGEMENT / DATABASE DATA 
section.sales-table-section
  h2 Manage Recorded Sales
  form#salesTableForm
    link(rel="stylesheet", href="/css/sales.css")
    table#salesTable
      thead
        tr
          th Customer Namer
          th Product Name 
          th Product Type
          th Unit Price
          th Quantity
          th Sale Date
          th Sales Agent
          th Payment Method
          if currentUser.role === "manager"
            th Update 
            th Delete 
      tbody
        if sales.length 
          each sale in sales 
            tr 
              td #{sale.customerName}
              td #{sale.productName}
              td #{sale.productType}
              td #{sale.unitPrice}
              td #{sale.quantity}
              td #{sale.saleDate}
              td #{sale.salesAgent ? sale.salesAgent.firstName + ' ' + sale.salesAgent.lastName : ''}
              td #{sale.paymentMethod}
              if currentUser.role === "manager"
                td 
                  a.btn.btn-warning(href=`/editsale/${sale._id}`) Edit
                td 
                  form(method='post' action="/deletestock")
                    input(type="hidden" name='id' value=sale._id)
                    button.btn.btn-danger.btn-block(type='submit') Delete 
            btn-dark.mt-3(href='Addsales') Add New Sale         
